    <style>
      .secnav {
        height: 60px;
        display: flex;
        align-items: center;
        box-sizing: border-box;
        padding: 10px 40px;
        position: sticky;
        top: 60px;
        left: 0;
        background-color: var(--bg1);
        z-index: 1;
      }
      .secnav button {
        position: relative;
        height: 100%;
        aspect-ratio: 1;
        background-color: var(--theme);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px;
        box-sizing: border-box;
        border-radius: 100px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
      }
      .secnav button svg {
        position: absolute;
        left: 5px;
        top: 5px;
        height: calc(100% - 10px);
        background-color: white;
        border-radius: 50%;
        box-sizing: border-box;
        padding: 5px;
      }
      .secnav button div {
        width: 0;
        overflow: hidden;
        color: white;
      }
      .secnav button:hover {
        aspect-ratio: 3.5/1;
      }
      .secnav button:hover div {
        width: 100%;
      }
      .secnav span {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        justify-self: center;
        align-self: center;
        font-size: 20px;
      }
      /*  */
      .qacontainer {
        padding: 40px;
        box-sizing: border-box;
        color: #717171;
      }
      .que {
        margin-top: 20px;
        margin-bottom: 5px;
        font-weight: 400;
      }
      .ans {
        font-size: 14px;
        margin-top: 0px;
      }
      @media screen and (width<450px) {
        .secnav {
          padding: 10px 20px;
        }
        .secnav button:hover {
          aspect-ratio: 1;
        }
        .secnav button:hover div {
          width: 0;
        }
      }
    </style>
